<%= link_to 'New location', new_location_path, :class => "new_button nohover" %>

<table>
  <tr>
    <th>Country</th>
    <th>Region</th>
    <th>Name</th>
  </tr>

<% @locations.each do |location| %>
  <tr>
    <td><%=h location.country %></td>
    <td><%=h location.region %></td>
    <td><%=h location.node_entry.name %></td>
    <td><%= link_to 'Show', location, :class => "show_button nohover" %></td>
    <td><%= link_to 'Edit', edit_location_path(location), :class => "edit_button nohover" %></td>
    <td><%= link_to 'Delete', location, :class => "delete_button nohover", :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />